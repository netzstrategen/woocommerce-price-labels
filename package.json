{
  "version": "1.2.5",
  "title": "woocommerce-price-labels",
  "description": "Generates price labels as PDFs for WooCommerce products.",
  "dependencies": {
    "@netzstrategen/gulp-task-collection": "^1.0.3"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.13.0",
    "prettier": "^1.14.0"
  },
  "scripts": {
    "watch": "gulp --concat=false",
    "build": "gulp build:production --concat=false"
  },
  "gulpPaths": {
    "destDir": "./dist",
    "fonts": {
      "src": "./assets/fonts/**/*.{eot,svg,ttf,woff,woff2}",
      "dest": "./dist/fonts"
    },
    "images": {
      "src": "./assets/img/**/*.{jpg,jpeg,png,gif,svg}",
      "dest": "./dist/img"
    },
    "scripts": {
      "src": "./assets/scripts/**/*.js",
      "dest": "./dist/scripts"
    },
    "styles": {
      "srcDir": "./assets/styles",
      "src": [
        "./assets/styles/**/*.scss"
      ],
      "dest": "./dist/styles"
    },
    "templates": "./templates/**/*.twig"
  }
}
